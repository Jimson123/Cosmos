<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game"
    tools:ignore="ExtraText"
    android:background="@color/black">

    <ImageView
        android:id="@+id/spaceship"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:rotation="0"
        app:srcCompat="@drawable/rocket"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="625dp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Score: 0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <ImageView
        android:id="@+id/asteroid1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/asteroid"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="275dp" />

    <ImageView
        android:id="@+id/asteroid2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/asteroid"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="425dp" />


    <ImageView
        android:id="@+id/asteroid3"
        android:layout_width="137dp"
        android:layout_height="121dp"
        app:srcCompat="@drawable/asteroid"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="119dp" />

    <ImageView
        android:id="@+id/asteroid4"
        android:layout_width="65dp"
        android:layout_height="86dp"
        app:srcCompat="@drawable/asteroid"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="86dp" />

    <ImageView
        android:id="@+id/asteroid5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/satellite"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="54dp" />

    <ImageView
        android:id="@+id/asteroid6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/satellite"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="497dp" />

    <ImageView
        android:id="@+id/asteroid7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/satellite"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="132dp" />

    <ImageView
        android:id="@+id/asteroid8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/satellite"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="375dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/moonLayout"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/moonIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/moon" />

        <ImageView
            android:id="@+id/moonGravity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gravity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/earthLayout"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/earthIcon"
